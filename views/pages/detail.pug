extends ../base.pug

block variables
  - var template = 'detail'

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media__image(alt=detail.data.image.alt src=detail.data.image.url)

      .detail__information
        p.detail__information__collection=`${detail.data.collection.data.title} Collection`

        h1.detail__information__title=detail.data.title

        .detail__information__content
          .detail__information__highlights
            each highlight in detail.data.highlights
              p.detail__information__highlight
                svg.detail__information__highlight__icon(version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 24.7 24.7" style="enable-background:new 0 0 24.7 24.7;" xml:space="preserve")
                  path(fill="currentColor" stroke="currentColor" id="handler1" transform="translate(-1389.327 -602.626)" class="st0" d="M1412,604.7l-0.7,2.4l0,2.6l-1.9-2.3l-2.3-1.9l2.6,0 L1412,604.7z M1391.4,625.3l0.7-2.4l0-2.6l1.9,2.3l2.3,1.9l-2.6,0L1391.4,625.3z M1396,620.7l11.3-11.3")
                //- if highlight.highlights_icon.toLowerCase() === "stars"
                //-   svg.detail__information__highlight__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20.4 20.6")
                //-     path(fill="currentColor" d="M40.8-161.2l-2.8,8.6l8.7-2.6l-8.2,4.1l8.2,4.3l-8.7-2.8l2.8,8.9l-4.3-8.3l-4.1,8.2l2.6-8.7l-8.6,2.8l8.2-4.2l-8.3-4.3l8.8,2.8l-2.8-8.8l4.3,8.3L40.8-161.2z")
                //- else if highlight.highlights_icon.toLowerCase() === "arrow"
                //-   svg.detail__information__highlight__icon(xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24.7 24.7")
                //-     path( fill="currentColor"  d="M1412,604.7l-0.7,2.4l0,2.6l-1.9-2.3l-2.3-1.9l2.6,0L1412,604.7z M1391.4,625.3l0.7-2.4l0-2.6l1.9,2.3l2.3,1.9l-2.6,0L1391.4,625.3z M1396,620.7l11.3-11.3")


                span.detail__information__highlight__text=highlight.highlights_text

          .detail__information__list
            each item in detail.data.informations
              p.detail__information__item
                strong.detail__information__item__title=item.information_label
                span.detail__information__item__description=item.information_description

          a.detail__information__link(href=detail.data.link_url.url target='_blank')=detail.data.link_text
        button.detail__button="close"
          svg.detail__button__icon(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 124 60")
            path(stroke="currentColor" fill="none" id="Ellipse_2" d="M62,0.5c34,0,61.5,13.2,61.5,29.5S96,59.5,62,59.5S0.5,46.3,0.5,30S28,0.5,62,0.5z")

